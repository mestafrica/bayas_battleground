<h1>Show Question details</h1>
<h2><%= @question.question_text %></h2>
<% @question.options.each do |option| %>
<p>
	<%= option.option_text %>
	<% if option.answer?%>
	<%= "Answer" %>
	<% end %>
	<%= link_to "Delete",question_option_path(@question,option), method: :delete, data: {confirm: "Are you sure?"}%>
</p>

<% end %>

<%= form_for([@question,@question.options.build]) do |f| %>
	<p>
		Add New Option
	</p>
	<p>
		<%= f.text_area :option_text %>
	</p>
	<p>
		<%= f.label :answer %>
		<%= f.check_box :answer %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>
<%= link_to "Back To Questions", test_path(@question.test_id) %>
